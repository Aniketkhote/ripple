import { createContext, getContext, setContext } from 'ripple';

const MyContext = createContext(null);

component Child() {
  const value = getContext(MyContext);

  <div>{value}</div>
}

export component App() {
  const value = getContext(MyContext);

  console.log(value);

  setContext(MyContext, "Hello from context!");

  <Child />
}